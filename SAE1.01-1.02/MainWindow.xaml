            Name="sol1"
            Canvas.Left="35"
            Canvas.Top="-20"
            Width="1210"
            Height="666"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="ForestGreen"
            Grid.IsSharedSizeScope="True"
             />
