<Window
    x:Class="SAE1._01_1._02.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE1._01_1._02"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="1500"
    Height="1000"
    mc:Ignorable="d">

    <Window.Resources>
        <FontFamily x:Key="PixelTandyFont">/SAE1.01-1.02;component/Pixel Tandy.otf#Pixel Tandy</FontFamily>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF060A31" />
                <GradientStop Offset="1" Color="#FF263186" />
                <GradientStop Offset="0.562" Color="#FF0E1550" />
            </LinearGradientBrush>
        </Grid.Background>

        <Label
            x:Name="titre"
            Margin="0,76,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{x:Null}"
            Content="ZOMBIE SURVIVOR"
            FontFamily="{StaticResource PixelTandyFont}"
            FontSize="120"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="but_Jouer"
            Width="250"
            Height="100"
            Margin="0,293,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#FF5CB75D"
            Content="Jouer"
            FontFamily="{StaticResource PixelTandyFont}"
            FontSize="72"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="but_Mode"
            Width="250"
            Height="100"
            Margin="0,408,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#FF5CB75D"
            Click="but_Mode_Click"
            Content="Mode"
            FontFamily="{StaticResource PixelTandyFont}"
            FontSize="72"
            FontWeight="Bold"
            Foreground="White" />
        <Rectangle
            x:Name="mode"
            Width="656"
            Height="364"
            Margin="0,568,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />

    </Grid>
</Window>
